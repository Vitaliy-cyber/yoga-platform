# Yoga Platform Environment Configuration
# Copy this file to .env and fill in the values

# Application Mode (dev or prod)
APP_MODE=dev

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database (SQLite by default, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./yoga_platform.db
# For PostgreSQL (Railway):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/yoga_platform

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# AI Image Generation Configuration
# ============================================

# Enable AI Generation (set to false for mock mode)
ENABLE_AI_GENERATION=true

# Google Gemini API
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
USE_GOOGLE_AI=true

# ============================================
# S3 Storage Configuration
# ============================================
STORAGE_BACKEND=s3
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_PREFIX=

# CORS (for production - frontend URL)
CORS_ALLOWED_ORIGINS=https://your-frontend.up.railway.app
