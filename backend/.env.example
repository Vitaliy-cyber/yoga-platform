# Yoga Platform Environment Configuration
# Copy this file to .env and fill in the values

# Application Mode (dev or prod)
APP_MODE=dev

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database (SQLite by default, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./yoga_platform.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/yoga_platform

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# AI Image Generation Configuration
# ============================================

# Enable AI Generation (set to false for mock mode)
ENABLE_AI_GENERATION=true

# Google Gemini API (RECOMMENDED - Primary AI Provider)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
USE_GOOGLE_AI=true

# Cloudflare Workers AI (Optional Fallback)
# Only needed if you want a fallback option
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# ============================================
# Storage Paths (usually no need to change)
# ============================================
UPLOAD_DIR=./storage/uploads
GENERATED_DIR=./storage/generated
LAYERS_DIR=./storage/layers
