# Режим роботи: dev або prod
APP_MODE=dev

# База даних
DATABASE_URL=postgresql://yoga_user:yoga_pass@localhost:5432/yoga_db

# Сервер
HOST=0.0.0.0
PORT=8000

# Шляхи
UPLOAD_DIR=./storage/uploads
GENERATED_DIR=./storage/generated
AI_MODEL_PATH=./ai/models

# AI генерація (вимкнути для тестування без GPU)
ENABLE_AI_GENERATION=true

# Cloudflare Workers AI (FLUX-2-dev)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
USE_CLOUDFLARE_AI=true

# JWT Secret (згенеруйте свій)
SECRET_KEY=your-secret-key-here-change-in-production
